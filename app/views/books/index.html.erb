<main>
<h2>Books</h2>

<table>
 <tr>
	 <th>Title</th>
	 <th>Body</th>
	 <th></th>
 </tr>
 <% @books.each do |book| %>
	<tr>

		 <td><%= book.title %></td>
		 <td><%= book.body %></td>
		 <td><%= link_to "Show",book_path(book) %></td>
		 <td><%= link_to "Edit", edit_book_path(book) %></td>
		 <td><%= link_to "Destroy", book_path(book), method: :delete %></td>
	</tr>
 <% end %>
</table>



<%= form_for(@book) do |f| %>
<h3>New book</h3>
<div class="title">
	<h4>Title</h4>
	<%= f.text_field :title %>
</div>
<div class="title">
	<h4>Body</h4>
	<%= f.text_area :body %>
	<%= f.submit 'Create Book' %>
</div>
<% end %>
</main>
